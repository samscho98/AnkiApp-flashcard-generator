        {
          "german": "die (feminine)",
          "english": "the (feminine nouns)",
          "content_type": "grammar",
          "example": "die Frau, die Katze, die Blume",
          "example_translation": "the woman, the cat, the flower",
          "rule": "Definite article for feminine nouns",
          "notes": "Also used for ALL plural nouns",
          "difficulty": 2,
          "tags": ["articles", "definite", "feminine"]
        },
        {
          "german": "das (neuter)",
          "english": "the (neuter nouns)",
          "content_type": "grammar",
          "example": "das Kind, das Haus, das Auto",
          "example_translation": "the child, the house, the car",
          "rule": "Definite article for neuter nouns",
          "notes": "Many diminutives (-chen, -lein) are neuter",
          "difficulty": 2,
          "tags": ["articles", "definite", "neuter"]
        }
      ]
    },
    "day_7": {
      "topic": "Indefinite Articles (ein, eine)",
      "words": [
        {
          "german": "ein (masculine/neuter)",
          "english": "a/an (masculine/neuter nouns)",
          "content_type": "grammar",
          "example": "ein Mann, ein Haus",
          "example_translation": "a man, a house",
          "rule": "Indefinite article for masculine and neuter nouns",
          "notes": "Same form for masculine and neuter in nominative",
          "difficulty": 2,
          "tags": ["articles", "indefinite", "masculine", "neuter"]
        },
        {
          "german": "eine (feminine)",
          "english": "a/an (feminine nouns)",
          "content_type": "grammar",
          "example": "eine Frau, eine Katze",
          "example_translation": "a woman, a cat",
          "rule": "Indefinite article for feminine nouns",
          "notes": "Always 'eine' for feminine in nominative",
          "difficulty": 2,
          "tags": ["articles", "indefinite", "feminine"]
        },
        {
          "german": "No plural indefinite article",
          "english": "No 'a/an' for plural",
          "content_type": "grammar",
          "example": "Männer, Frauen, Häuser",
          "example_translation": "men, women, houses",
