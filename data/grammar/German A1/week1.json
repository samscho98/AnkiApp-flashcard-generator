          "pattern": "Wie + [Verb] + [Subject] + [Rest]?",
          "pronunciation": "vee",
          "difficulty": 1,
          "tags": ["questions", "w-questions", "manner"]
        },
        {
          "german": "Wer?",
          "english": "Who?",
          "content_type": "grammar",
          "example": "Wer ist das?",
          "example_translation": "Who is that?",
          "rule": "Asks about people (subject)",
          "pattern": "Wer + [Verb] + [Rest]?",
          "pronunciation": "vair",
          "difficulty": 1,
          "tags": ["questions", "w-questions", "people"]
        },
        {
          "german": "Wann?",
          "english": "When?",
          "content_type": "grammar",
          "example": "Wann kommst du?",
          "example_translation": "When are you coming?",
          "rule": "Asks about time",
          "pattern": "Wann + [Verb] + [Subject] + [Rest]?",
          "pronunciation": "van",
          "difficulty": 1,
          "tags": ["questions", "w-questions", "time"]
        },
        {
          "german": "Warum?",
          "english": "Why?",
          "content_type": "grammar",
          "example": "Warum lernst du Deutsch?",
          "example_translation": "Why are you learning German?",
          "rule": "Asks for reasons",
          "pattern": "Warum + [Verb] + [Subject] + [Rest]?",
          "pronunciation": "vah-rum",
          "difficulty": 2,
          "tags": ["questions", "w-questions", "reason"]
        }
      ]
    },
    "day_6": {
      "topic": "Definite Articles (der, die, das)",
      "words": [
        {
          "german": "der (masculine)",
          "english": "the (masculine nouns)",
          "content_type": "grammar",
          "example": "der Mann, der Tisch, der Hund",
          "example_translation": "the man, the table, the dog",
