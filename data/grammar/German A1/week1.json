          "pattern": "Wo + [Verb] + [Subject] + [Rest]?",
          "pronunciation": "voh",
          "difficulty": 1,
          "tags": ["questions", "w-questions", "location"]
        },
        {
          "german": "Was?",
          "english": "What?",
          "content_type": "grammar",
          "example": "Was machst du?",
          "example_translation": "What are you doing?",
          "rule": "Most common question word",
          "pattern": "Was + [Verb] + [Subject] + [Rest]?",
          "pronunciation": "vas",
          "difficulty": 1,
          "tags": ["questions", "w-questions", "general"]
        },
        {
          "german": "Wie?",
          "english": "How?",
          "content_type": "grammar",
          "example": "Wie geht es dir?",
          "example_translation": "How are you?",
