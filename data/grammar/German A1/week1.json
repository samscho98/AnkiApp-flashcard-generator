        {
          "german": "sie/Sie spielen",
          "english": "they play / you (formal) play",
          "content_type": "grammar",
          "example": "Sie spielen oft. / Spielen Sie gern?",
          "example_translation": "They play often. / Do you like to play?",
          "rule": "Regular verbs: infinitive form for sie/Sie",
          "pattern": "spielen → spielen (same as infinitive)",
          "base_form": "spielen",
          "difficulty": 2,
          "tags": ["verbs", "conjugation", "present", "regular"]
        }
      ]
    },
    "day_3": {
      "topic": "Basic Sentence Structure (SVO)",
      "words": [
        {
          "german": "Subject + Verb + Object",
          "english": "Basic German word order",
          "content_type": "grammar",
          "example": "Ich trinke Kaffee.",
          "example_translation": "I drink coffee.",
          "rule": "Standard word order in main clauses",
          "pattern": "[Subject] + [Verb] + [Object]",
          "notes": "Same as English in simple sentences",
          "difficulty": 1,
          "tags": ["word-order", "syntax", "basic"]
        },
        {
          "german": "Verb in second position",
          "english": "Verb always in position 2",
          "content_type": "grammar",
          "example": "Heute trinke ich Kaffee.",
          "example_translation": "Today I drink coffee.",
          "rule": "In German, verb is always in second position",
          "pattern": "[Position 1] + [Verb] + [Subject] + [Rest]",
          "notes": "Position 1 can be subject, time, place, etc.",
          "difficulty": 3,
          "tags": ["word-order", "syntax", "V2-rule"]
        },
        {
          "german": "Statement formation",
          "english": "Making statements",
          "content_type": "grammar",
          "example": "Das Buch ist interessant.",
          "example_translation": "The book is interesting.",
          "rule": "Subject + conjugated verb + complement",
          "pattern": "[Subject] + [Verb] + [Complement/Object]",
          "notes": "Most common sentence type",
          "difficulty": 1,
          "tags": ["statements", "syntax", "basic"]
        }
      ]
    },
    "day_4": {
      "topic": "Yes/No Questions",
      "words": [
        {
          "german": "Verb-first questions",
          "english": "Yes/No questions",
          "content_type": "grammar",
          "example": "Trinkst du Kaffee?",
          "example_translation": "Do you drink coffee?",
          "rule": "Start with conjugated verb for yes/no questions",
          "pattern": "[Verb] + [Subject] + [Rest]?",
          "notes": "No auxiliary verb needed like English 'do'",
          "difficulty": 2,
          "tags": ["questions", "yes-no", "syntax"]
        },
        {
          "german": "Question with 'sein'",
          "english": "Questions with 'to be'",
          "content_type": "grammar",
          "example": "Bist du müde?",
          "example_translation": "Are you tired?",
          "rule": "Conjugated 'sein' comes first",
          "pattern": "[Bin/Bist/Ist] + [Subject] + [Adjective]?",
          "base_form": "sein (to be)",
          "difficulty": 2,
          "tags": ["questions", "sein", "adjectives"]
        },
        {
          "german": "Answering yes/no questions",
          "english": "Ja/Nein responses",
          "content_type": "grammar",
          "example": "Ja, ich trinke Kaffee. / Nein, ich trinke keinen Kaffee.",
          "example_translation": "Yes, I drink coffee. / No, I don't drink coffee.",
          "rule": "Answer with ja/nein + complete sentence",
          "pattern": "Ja/Nein, [complete sentence]",
          "notes": "Avoid short answers in formal German",
          "difficulty": 2,
          "tags": ["questions", "answers", "ja-nein"]
        }
      ]
    },
    "day_5": {
      "topic": "W-Questions (Question Words)",
      "words": [
        {
