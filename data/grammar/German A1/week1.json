  "level": "A1",
  "week": 1,
  "days": {
    "day_1": {
      "topic": "Personal Pronouns",
      "words": [
        {
          "german": "ich",
          "english": "I",
          "content_type": "grammar",
          "example": "Ich bin Maria.",
          "example_translation": "I am Maria.",
          "rule": "First person singular pronoun",
          "pronunciation": "ikh",
          "notes": "Always lowercase except at sentence beginning",
          "difficulty": 1,
          "tags": ["pronouns", "personal", "basic"]
        },
        {
          "german": "du",
          "english": "you (informal singular)",
          "content_type": "grammar",
          "example": "Du bist nett.",
          "example_translation": "You are nice.",
          "rule": "Second person singular, informal",
          "pronunciation": "doo",
          "notes": "Used with friends, family, children",
          "difficulty": 1,
          "tags": ["pronouns", "personal", "informal"]
        },
        {
          "german": "er/sie/es",
          "english": "he/she/it",
          "content_type": "grammar",
          "example": "Er ist groß. Sie ist klein. Es ist gut.",
          "example_translation": "He is tall. She is small. It is good.",
          "rule": "Third person singular pronouns",
          "pronunciation": "air/zee/es",
          "notes": "Er=masculine, sie=feminine, es=neuter",
          "difficulty": 2,
          "tags": ["pronouns", "personal", "gender"]
        },
        {
          "german": "wir",
          "english": "we",
          "content_type": "grammar",
          "example": "Wir sind Studenten.",
          "example_translation": "We are students.",
          "rule": "First person plural pronoun",
          "pronunciation": "veer",
          "notes": "Used for groups including yourself",
          "difficulty": 1,
          "tags": ["pronouns", "personal", "plural"]
        },
        {
          "german": "ihr",
          "english": "you (informal plural)",
          "content_type": "grammar",
          "example": "Ihr seid jung.",
          "example_translation": "You (all) are young.",
          "rule": "Second person plural, informal",
          "pronunciation": "eer",
          "notes": "Used when addressing multiple friends/family",
          "difficulty": 2,
          "tags": ["pronouns", "personal", "plural", "informal"]
        },
        {
          "german": "sie/Sie",
          "english": "they/you (formal)",
          "content_type": "grammar",
          "example": "Sie kommen heute. (they) / Sie sind Herr Schmidt? (you formal)",
          "example_translation": "They come today. / You are Mr. Schmidt?",
          "rule": "Third person plural OR formal second person",
          "pronunciation": "zee",
          "notes": "Formal Sie is always capitalized",
          "difficulty": 3,
          "tags": ["pronouns", "personal", "formal", "plural"]
        }
      ]
    },
