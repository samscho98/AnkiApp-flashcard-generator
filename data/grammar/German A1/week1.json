          "rule": "Regular verbs: stem + -t for er/sie/es",
          "pattern": "spielen → spiel + t",
          "base_form": "spielen",
          "difficulty": 2,
          "tags": ["verbs", "conjugation", "present", "regular"]
        },
        {
          "german": "wir spielen",
          "english": "we play",
          "content_type": "grammar",
          "example": "Wir spielen zusammen.",
          "example_translation": "We play together.",
          "rule": "Regular verbs: infinitive form for wir",
          "pattern": "spielen → spielen (same as infinitive)",
          "base_form": "spielen",
          "difficulty": 1,
          "tags": ["verbs", "conjugation", "present", "regular"]
        },
        {
          "german": "ihr spielt",
          "english": "you (plural) play",
          "content_type": "grammar",
          "example": "Ihr spielt sehr gut.",
          "example_translation": "You (all) play very well.",
