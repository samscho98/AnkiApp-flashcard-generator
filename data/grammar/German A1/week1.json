          "pattern": "spielen → spiel + e",
          "base_form": "spielen",
          "difficulty": 2,
          "tags": ["verbs", "conjugation", "present", "regular"]
        },
        {
          "german": "du spielst",
          "english": "you play",
          "content_type": "grammar",
          "example": "Du spielst gut.",
          "example_translation": "You play well.",
